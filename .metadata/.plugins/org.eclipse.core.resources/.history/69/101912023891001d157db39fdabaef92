import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);

		Scanner sc = new Scanner(System.in);

		double salarioAtual, novoSalario, aumento, porcentagem;

		System.out.print("Digite o salario da pessoa: ");
		salarioAtual = sc.nextDouble();

		if (salarioAtual < 1000.00) {
			porcentagem = 20.0;
		} 
		else if (salarioAtual < 3000.00) {
			porcentagem = 15.0;
		} 
		else if (salarioAtual < 8000.00) {
			porcentagem = 10.0;
		} 
		else {
			porcentagem = 5.0;
		}

		aumento = salarioAtual * porcentagem;
		novoSalario = salarioAtual + aumento;
		
		System.out.printf("Novo salario = R$ %.2f\n", novoSalario);
		System.out.printf("Aumento = R$ %.2f\n", aumento);
		System.out.printf("Porcentagem = %.0f % \n", porcentagem);
		
		sc.close();
	}

}
